# pylint: disable=C,I,R


"build the package"


import os


NAME = sys.argv[0].split()[-1]


os.environ["PATH"] += ":bin"


def popen(txt):
    for line in os.popen(txt).readlines():
        print(line.strip())


print("\nCLEAN\n")
popen("clean")
print("\nTEST\n")
print("\nBUILD\n")
popen("python3 setup.py sdist")
popen("mkenv")
popen(f"env/bin/{NAME} cmd")
print("\nWHEEL\n")
popen("python3 -m pip wheel -e .")
popen("mv *.whl dist")
print("\nTWINE\n")
popen("twine check dist/*")
